<h2>Village-Activity Details</h2>

<p id="notice"><%= notice %></p>

<p>
  <strong>Village:</strong>
  <%= link_to @village_activity.village.name, village_path(@village_activity.village) %>
</p>

<p>
  <strong>Activity:</strong>
  <%= link_to @village_activity.activity.name, activity_path(@village_activity.activity) %>
</p>

<p>
  <strong>Start Date:</strong>
  <% if @village_activity.start_date != nil %>
    <%= @village_activity.start_date.strftime('%m/%d/%y') %>
  <% end %>
</p>

<p>
  <strong>End Date:</strong>
  <% if @village_activity.end_date != nil %>
    <%= @village_activity.end_date.strftime('%m/%d/%y') %>
  <% else %>
    Ongoing
  <% end %>
</p>

<% if logged_in? %>
  <%= link_to 'Edit', edit_village_activity_path(@village_activity), class: "button tiny radius" %>
<% end %>
<%= link_to 'Back to All Village-Activities', village_activities_path, class: "button tiny radius" %><br>
<% if logged_in? %>
  <%= link_to 'Destroy', @village_activity, data: { confirm: 'Are you sure?' }, method: :delete, class: "button tiny round alert" %>
<% end %>