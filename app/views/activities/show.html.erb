<h2>Activity Details</h2>

<p>
  <strong>Name:</strong>
  <%= @activity.name %>
</p>

<p>
  <strong>Active?</strong>
  <%= @activity.active ? "Yes" : "No" %>
</p>

<% if logged_in? %>
	<%= link_to 'Edit', edit_activity_path(@activity), class: "button tiny radius" %>
<% end %>
<%= link_to 'Back to All Activities', activities_path, class: "button tiny radius" %><br>
<% if logged_in? %>
	<%= link_to 'Destroy', @activity, data: { confirm: 'Are you sure?' }, method: :delete, class: "button tiny round alert" %>
<% end %>
